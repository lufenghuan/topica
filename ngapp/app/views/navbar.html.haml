          %input.hotcorner-search{:placeholder => "Search", :type => "search"}
        %li.hotcorner-user-item.hotcorner-menu-item
          %a.hotcorner-icon.hotcorner-icon-user
            %i.fa.fa-user
          %span.hotcorner-menu-text
            Users
        %li.hotcorner-topic-item.hotcorner-menu-item
          %a.hotcorner-icon.hotcorner-icon-topic
            %i.fa.fa-comments
          %span.hotcorner-menu-text
            Topics

        %li.hotcorner-post-item.hotcorner-menu-item
          %a.hotcorner-icon.hotcorner-icon-post
            %i.fa.fa-comment-o
          %span.hotcorner-menu-text
