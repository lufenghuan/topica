describe("E2E Testing for Controllers", function() {

  beforeEach(function() {
    browser().navigateTo('/');
  });

  it('should have a working main page controller that changes the scope', function() {
    browser().navigateTo('/');
    expect(browser().window().path()).toBe("/");
  });

  it('should have a working profile page controller that changes the scope', function() {
    browser().navigateTo('/profile');
    expect(browser().window().path()).toBe("/profile");
  });

  it('should have a working signup page controller that changes the scope', function() {
    browser().navigateTo('/signup');
    expect(browser().window().path()).toBe("/signup");
  });

  it('should have a working login page controller that changes the scope', function() {
    browser().navigateTo('/login');
    expect(browser().window().path()).toBe("/login");
  });

});
